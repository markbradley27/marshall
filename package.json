{
  "name": "marshall",
  "version": "0.1.0",
  "description": "peakbagger++",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "client": "npm start --prefix app",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint:fix": "eslint --fix './src/**/*.ts'",
    "lint": "eslint './src/**/*.ts'",
    "fixall": "format:fix lint:fix",
    "tsc": "tsc",
    "build": "npm-run-all clean format:check lint tsc",
    "dev:start": "npm-run-all build start",
    "dev:watch": "nodemon --watch src -e ts --exec npm run dev:start",
    "dev": "concurrently \"npm run dev:watch\" \"npm run client\"",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markbradley27/marshall.git"
  },
  "author": "Mark Bradley",
  "bugs": {
    "url": "https://github.com/markbradley27/marshall/issues"
  },
  "homepage": "https://github.com/markbradley27/marshall#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.13",
    "@types/xmldom": "^0.1.31",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "async-mutex": "^0.3.2",
    "commander": "^8.2.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase": "^9.1.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@types/geojson": "^7946.0.8",
    "@types/validator": "^13.6.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.2",
    "firebase-admin": "^9.11.1",
    "geojson-polyline": "^1.0.3",
    "got": "^11.8.2",
    "pg": "^8.7.1",
    "prettier": "^2.4.1",
    "togeojson": "^0.16.0",
    "tslog": "^3.2.2",
    "typeorm": "^0.2.38",
    "xmldom": "^0.6.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          },
          "warnOnUnassignedImports": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
